{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es5",
    "traceResolution": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
